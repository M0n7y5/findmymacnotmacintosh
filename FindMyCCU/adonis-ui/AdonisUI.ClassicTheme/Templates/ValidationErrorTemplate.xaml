<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AdonisUI.ClassicTheme.Templates"
                    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI">

    <ControlTemplate x:Key="{x:Static adonisUi:Templates.ValidationErrorTemplate}">
        <DockPanel>

            <Border BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.ErrorBrush}}"
                    BorderThickness="1">
                
                <AdornedElementPlaceholder x:Name="ErrorAdorner"/>
                
            </Border>

        </DockPanel>
    </ControlTemplate>

</ResourceDictionary>