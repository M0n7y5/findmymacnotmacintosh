<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:AdonisUI.Demo.ViewModels"
                    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <DataTemplate x:Key="ButtonDemoTemplate">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="{adonisUi:Space 1}"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="{adonisUi:Space 1}"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="{adonisUi:Space 1}"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Button"/>

            <ToggleButton Content="ToggleButton"
                          Grid.Row="0"
                          Grid.Column="2"/>

            <ToggleButton Content="DefaultToAccentToggleButton"
                          Grid.Row="2"
                          Style="{StaticResource {x:Static adonisUi:Styles.DefaultToAccentToggleButton}}"
                          Grid.Column="0"/>

            <adonisControls:SplitButton Content="SplitButton (Custom)"
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3">
                <adonisControls:SplitButton.SplitMenu>
                    <ContextMenu MinWidth="{Binding PlacementTarget.ActualWidth, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Item 1"/>
                        <MenuItem Header="Item 2"/>
                        <MenuItem Header="Item 3"/>
                    </ContextMenu>
                </adonisControls:SplitButton.SplitMenu>
            </adonisControls:SplitButton>

        </Grid>

    </DataTemplate>

    <DataTemplate x:Key="ContainerDemoTemplate">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="{adonisUi:Space 1}"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Expander Header="Expander">
                <Grid Margin="{adonisUi:Space 0, 1, 0, 0}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="{adonisUi:Space 1}"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Text="Input"
                             HorizontalAlignment="Stretch"/>

                    <Button Grid.Column="2"
                            Content="..."/>

                </Grid>
            </Expander>

            <GroupBox Grid.Row="2">

                <GroupBox.Header>
                    <Grid>
                        <TextBlock Text="Lorem Ipsum"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">

                            <ToggleButton Content="X"
                                          Width="24"
                                          Height="24"
                                          Style="{DynamicResource {x:Static adonisUi:Styles.ToolbarToggleButton}}"/>

                            <Button Content="X"
                                    Width="24"
                                    Height="24"
                                    Style="{DynamicResource {x:Static adonisUi:Styles.ToolbarButton}}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox.Header>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="{adonisUi:Space 1}"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Text="Input"
                             HorizontalAlignment="Stretch"/>

                    <Button Grid.Column="2"
                            Content="..."/>

                </Grid>

            </GroupBox>
        </Grid>

    </DataTemplate>

    <DataTemplate x:Key="InputDemoTemplate">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="{adonisUi:Space 1}"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="{adonisUi:Space 1}"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="{adonisUi:Space 1}"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="{adonisUi:Space 1}"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Text="Editable TextBox"/>
            
            <GridSplitter Grid.Row="0"
                          Grid.Column="1"
                          Grid.RowSpan="7"
                          Width="4"
                          ResizeDirection="Columns"/>

            <DatePicker SelectedDate="{x:Static sys:DateTime.Now}"
                        Grid.Row="0"
                        Grid.Column="2"
                        HorizontalContentAlignment="Right"/>

            <ComboBox IsEditable="True"
                      Grid.Row="2"
                      Grid.Column="0"
                      HorizontalContentAlignment="Right">
                <ComboBox.Items>
                    <ComboBoxItem Content="Editable ComboBox Item 1"/>
                    <ComboBoxItem Content="Editable ComboBox Item 2"/>
                    <ComboBoxItem Content="Editable ComboBox Item 3"/>
                </ComboBox.Items>
            </ComboBox>

            <ComboBox IsReadOnly="True"
                      Grid.Row="2"
                      Grid.Column="2">
                <ComboBox.Items>
                    <ComboBoxItem Content="ReadOnly ComboBox Item 1"/>
                    <ComboBoxItem Content="ReadOnly ComboBox Item 2"/>
                    <ComboBoxItem Content="ReadOnly ComboBox Item 3"/>
                </ComboBox.Items>
            </ComboBox>

            <StackPanel Grid.Row="4"
                        Grid.Column="0"
                        Orientation="Vertical">

                <CheckBox Content="CheckBox"
                          IsChecked="False"/>

                <CheckBox Content="CheckBox"
                          IsChecked="{x:Null}"/>

                <CheckBox Content="CheckBox"
                          IsChecked="True"
                          IsEnabled="False"/>

            </StackPanel>

            <StackPanel Grid.Row="4"
                        Grid.Column="2"
                        Orientation="Vertical">

                <RadioButton Content="RadioButton"
                             GroupName="RadioButtonGroup"
                             IsChecked="True"/>

                <RadioButton Content="RadioButton"
                             GroupName="RadioButtonGroup"
                             IsChecked="False"/>

                <RadioButton Content="RadioButton"
                             GroupName="RadioButtonGroup"
                             IsChecked="False"
                             IsEnabled="False"/>
            </StackPanel>
            
            <Slider Grid.Row="6"
                    Grid.Column="0"
                    Minimum="0"
                    Maximum="100"
                    Value="30"
                    TickPlacement="BottomRight"
                    TickFrequency="10"/>
            
            <ProgressBar Grid.Row="6"
                         Grid.Column="2"
                         Minimum="0"
                         Maximum="100"
                         Value="70"
                         VerticalAlignment="Bottom"
                         Padding="{adonisUi:Space 1, 0+2}"
                         adonisExtensions:ProgressBarExtension.Content="ProgressBar with Content"/>

        </Grid>

    </DataTemplate>

    <DataTemplate x:Key="ListDemoTemplate">

        <Grid>
            <ListBox>
                <ListBox.Items>
                    <ListBoxItem Content="Item 1"/>
                    <ListBoxItem Content="Item 2"/>
                    <ListBoxItem Content="Item 3"/>
                </ListBox.Items>
            </ListBox>
        </Grid>

    </DataTemplate>

